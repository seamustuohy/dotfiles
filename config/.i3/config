# display_mode
mode "display_mode" {
        bindsym Up  exec "xbacklight -inc 20"; nop #LABEL Brighten Screen
        bindsym Down  exec "xbacklight -dec 20"; nop #LABEL Darken Screen
        bindsym r  exec "set_monitors.sh"; mode "default"; nop #LABEL Refresh Monitor Setup
        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym Control+g mode "go_back"
}


# screenshot_mode
mode "screenshot_mode" {
#Fullscreen
        bindsym f  exec "scrot -q 100 ${HOME}'/Pictures/Screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.png'"; mode "default"; nop #LABEL Screenshot Fullscreen
#Window
        bindsym w  exec "scrot -q 100 -u ${HOME}'/Pictures/Screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.png'"; mode "default"; nop #LABEL Screenshot Window
#Selection
        bindsym s  exec "sleep 0.4; scrot -q 100 -s ${HOME}'/Pictures/Screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.png'"; mode "default" #LABEL Screenshot Selection
        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym Control+g mode "go_back"
}
Bindsym Print mode "screenshot_mode"

# go_back
mode "go_back" {
#IGNORE ME
        bindsym i  mode "default"
        bindsym Escape mode "default"
        bindsym Return mode "default"
}


# security_mode
mode "security_mode" {
#Lock
        bindsym l  mode "default"; exec "printf '493843\n61988E\n5D737E\n7FC6A4\nD6F8D6' | shuf -n 1 | xargs -I % i3lock -c %"; nop #LABEL Lock Screen
        bindsym Escape mode "default"
        bindsym Return mode "default"
}


# fix_it_mode
mode "fix_it_mode" {
        bindsym c  exec "capslock_off.sh"; mode "default"; nop #LABEL Fix Capslock
        bindsym r  reload; mode "default"; nop #LABEL i3 Reload
        bindsym Shift+r  restart; mode "default"; nop #LABEL i3 Restart
        bindsym Escape mode "default"
        bindsym Return mode "default"
}


# design_mode
mode "design_mode" {
#Screenshot
        bindsym s  mode "screenshot_mode"
        bindsym Escape mode "default"
        bindsym Return mode "default"
}


# networking_mode
mode "networking_mode" {
#Stunnel
        bindsym s  exec terminator -e "sudo openvpn /etc/openvpn/*-stunnel.ovpn"; mode "default"; nop #LABEL Stunnel
#VPN
        bindsym v  exec terminator -e "sudo openvpn /etc/openvpn/*-direct.ovpn"; mode "default"; nop #LABEL Run VPN
        bindsym Escape mode "default"
        bindsym Return mode "default"
}


# audio_mode
mode "audio_mode" {
        bindsym h  exec "movesinks.sh $(pactl list short sinks |grep Logitech_USB_Headset  | cut -f 1)"; mode "default" ; nop #LABEL Swap to headphones
        bindsym s  exec  "movesinks.sh $(pactl list short sinks |grep 'alsa_output.pci-0000_00_1b.0.analog-stereo' | cut -f 1)"; mode "default"; nop #LABEL Swap to internal speakers
        bindsym m  exec amixer set Master 1+ toggle; mode "default"; nop #LABEL Mute
        bindsym Down  exec "amixer set Master 5%-"; nop #LABEL Volume Down
        bindsym Up  exec "amixer set Master 5%+"; nop #LABEL Volume Up
        bindsym Escape mode "default"
        bindsym Return mode "default"
}
Bindsym $mod+Shift+a mode "audio_mode"

# time_clocking_mode
mode "time_clocking_mode" {
#View Tasks
        bindsym t  exec terminator -e "task"; mode "default"; nop #LABEL View Tasks
        bindsym Escape mode "default"
        bindsym Return mode "default"
}


# master_mode
mode "master_mode" {
        bindsym a  mode "audio_mode"; nop #LABEL ♪ Mode
        bindsym s  mode "security_mode"; nop #LABEL ⚿ Mode
        bindsym d  mode "display_mode"; nop #LABEL Display Mode
        bindsym n  mode "networking_mode"; nop #LABEL Net Mode
        bindsym f  mode "fix_it_mode"; nop #LABEL ⚠ Mode
        bindsym Shift+d  mode "design_mode"; nop #LABEL Design Mode
        bindsym t  mode "time_clocking_mode"; nop #LABEL ⏱ Mode
        bindsym Escape mode "default"
        bindsym Return mode "default"
}
Bindsym Shift+Control+Return mode "master_mode"
